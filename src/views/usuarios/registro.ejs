<!doctype html>
<html lang="es">
  <%- include('../partials/head') %>
  <body>
    <div class="container-fluid">
      <%- include('../partials/navBar') %>  

        <!-- Cuerpo principal -->
        <section class="row">
          <article class="col-12  card pt-5" >
                  <div class="card-body">
                    <h1 class="card-title text-center">Registrate</h1>
                    <h3 class="text-center" >Crea tu cuenta, sólo te tomara unos minutos.</h3>

                  </div>
          </article>
      </section>
        <section class="bg-home pt-4">
            <div class="container">
                <div class="row" >
                    <div class="col-8 mx-auto bg-light ">
                            <!--Aquí muestro los errores del lado del Js-Front -->
                            <div>
                                <ul id="errores">

                                </ul>
                            </div>
                            <!-- Aquí acomode los errores para que se vean mejor y Edu no se Angustie. Abrazos.--->
                            <% if(typeof(errors) != 'undefined'){%>
                                <ul class="alert alert-danger">
                                    <% errors.forEach(error => { %>
                                        <li><%= error.msg%></li>
                                    <%});%>
                                </ul>
                            <%}%>    
                        <div class="signup-form">
                            <form class="formulario" id="formulario" action="/registro" method="post" enctype="multipart/form-data">
                                <div class="form-group">
                                    <!--Noten aqui en los input estoy persistiendo los datos si el usuario coloca algunos datos  buenos, pero otros no-->
                                    <input type="text" class="form-control" name="first_name" placeholder="Nombre"  value="<%= typeof old != 'undefined' ? old.first_name : '' %>">
                                </div>
                                <div class="form-group">
                                    <input type="text" class="form-control" name="last_name" placeholder="Apellido" value="<%= typeof old != 'undefined' ? old.last_name : '' %>">
                                </div>	
                                <div class="form-group">
                                    <input type="text" class="form-control" name="email" placeholder="Email" value="<%= typeof old != 'undefined' ? old.email : '' %>">
                                </div>
                                <div class="form-group">
                                    <input type="password" class="form-control" name="password" placeholder="Contraseña" >
                                </div>
                                <div class="form-group">
                                    <input type="password" class="form-control" name="confirm_password" placeholder="Confirma Contraseña" >
                                </div>        
                                <div class="form-group">
                                    <select class="form-control custom-select" id="provincia" name="provincia" value="" > 
                                        <option disabled selected value="" >Seleccione su provincia</option>
                                    </select>


                                  <!--  
                                  <select class="form-control custom-select" id="provincia" name="provincia">
                                      <option disabled selected >Seleccione su provincia</option>
                                      <% //provincias.forEach(prov => { %>
                                          <option   value="<%= //typeof old != 'undefined' ? old.provincia : prov.id %>"><%= //prov.nombre %></option>
                                      <% //}); %>
                                  </select>-->
                                </div>
                                <div class="custom-file">
                                    <input type="file"   name="avatar"  placeholder="Debes eligir tu avatar...">
                                    
                                </div>
                                <div class="form-group">
                                    <button type="submit" class="btn btn btn-info">Registrarme</button>
                                </div>
                            </form>
                            <div class="text-center my-3">Ya tengo una cuenta? <a href="/login">Inicia sesión</a></div>
                        </div>
                    </div>                        
                    </div>
                </div>
            </div>
        </section>
        <!-- Footer -->
        <%- include('../partials/footer') %>        <!-- Scripts para Bootstrap -->
        <script src="/js/registro.js"></script>
</body>
</html>
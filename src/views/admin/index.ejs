<!DOCTYPE html>
<html lang="es">
<%- include('../partials/head.ejs') %>
<body >
    <%-include('../partials/navBar.ejs')%>
    <h1 class="text-center text-success display-5 mt-5 pt-2">Administrador de Platos</h1>
    <section class="row">
        <article class="col-6" >
            <a class="nav-link" href="/admin/create"><ion-icon name="add-circle-outline"></ion-icon>Agregar</a>
        </article>
        <article class="col-6 " >
            <form  class=" d-flex justify-content-between " action="/administrar/buscar" method="GET">
              <input class="form-control mr-sm-2" type="search" name="buscar">
              <button class="btn btn-outline-info my-2 my-sm-0" type="submit"><ion-icon name="search-outline"></ion-icon></button>
            </form>
          </article>
  
    </section>
    <table class="table mt-5">
        <thead>
            <tr>
                <th>ID</th>
                <th>Nombre del Plato</th>
                <th>Ver</th>
                <th>Editar</th>
                <th>Borrar</th>
            </tr>
        </thead>
        <tbody>
            <% platos.forEach(plato => { %>
                <tr>
                    <td><%= plato.id %> </td>
                    <td><%= plato.name%> </td>
                    <td><a href="/admin/detail/<%= plato.id%>"><ion-icon name="eye-outline"></ion-icon></a></td>
                    <td><a href="/admin/edit/<%= plato.id%>"><ion-icon name="create-outline"></ion-icon></a></td>
                    <td><a href="/admin/delete/<%= plato.id%>"><ion-icon name="trash-outline"></ion-icon></a></td>
                </tr>
            <% }) ; %>
            

        </tbody>
    </table>    
    <%-include('../partials/footer.ejs')%>
    <script src="https://unpkg.com/ionicons@5.0.0/dist/ionicons.js"></script>
</body>
</html>